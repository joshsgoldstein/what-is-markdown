---
import BaseLayout from '../layouts/BaseLayout.astro';

const cheatsheets = [
  {
    issue: '01',
    title: 'Markdown',
    subtitle: 'Cheatsheet',
    description: 'Headings, emphasis, lists, links, front matter, and why LLMs love Markdown.',
    href: 'markdown-cheatsheet',
  },
  {
    issue: '02',
    title: 'Git',
    subtitle: 'Cheatsheet',
    description: 'Essential commands, branching, commit metadata, and why AI agents live inside Git.',
    href: 'git-cheatsheet',
  },
];
---

<BaseLayout title="AI Basics — Cheatsheet Series">
  <div class="page">

    <div class="header">
      <div class="header-left">
        <div class="series-tag">Lost In AI Land</div>
        <h1>AI Basics<br><em>Cheatsheets</em></h1>
        <p class="subtitle">Quick references for the tools that matter.</p>
      </div>
      <div class="header-right">
        <div class="big-label">Field Notes<br>for the<br>AI Age</div>
      </div>
    </div>

    <div class="section-title">All Issues</div>

    <div class="sheet-grid">
      {cheatsheets.map((sheet) => (
        <a href={sheet.href} class="sheet-card">
          <div class="sheet-issue">Issue {sheet.issue}</div>
          <div class="sheet-title">
            {sheet.title}<br /><em>{sheet.subtitle}</em>
          </div>
          <p class="sheet-desc">{sheet.description}</p>
          <div class="sheet-cta">Open →</div>
        </a>
      ))}
    </div>

    <div class="footer">
      <div class="footer-left">Lost In AI Land</div>
      <div class="footer-right">AI Basics Series · lostinai.substack.com</div>
    </div>

  </div>
</BaseLayout>

<style>
  .sheet-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 40px;
  }

  @media (max-width: 600px) {
    .sheet-grid { grid-template-columns: 1fr; }
  }

  .sheet-card {
    background: var(--cream);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 28px 24px;
    text-decoration: none;
    color: var(--ink);
    display: flex;
    flex-direction: column;
    gap: 12px;
    transition: border-color 0.15s, box-shadow 0.15s;
  }

  .sheet-card:hover {
    border-color: var(--accent);
    box-shadow: 0 2px 12px rgba(201, 79, 42, 0.08);
  }

  .sheet-issue {
    font-family: 'DM Mono', monospace;
    font-size: 11px;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--tag);
    background: var(--tag-bg);
    padding: 4px 10px;
    border-radius: 3px;
    width: fit-content;
  }

  .sheet-title {
    font-family: 'DM Serif Display', serif;
    font-size: 32px;
    line-height: 1.05;
    letter-spacing: -0.02em;
  }

  .sheet-title em {
    color: var(--accent);
    font-style: italic;
  }

  .sheet-desc {
    font-size: 13px;
    color: var(--muted);
    line-height: 1.6;
    flex: 1;
  }

  .sheet-cta {
    font-family: 'DM Mono', monospace;
    font-size: 12px;
    color: var(--accent);
    letter-spacing: 0.06em;
    margin-top: 4px;
  }
</style>
